mixin video(video)
    div.video
        div 
            a(href="/videos/"+video._id) 
                if isHeroku
                    img(src=video.thumbnailUrl, alt="Thumbnail of Video")
                else
                    img(src="/"+video.thumbnailUrl, alt="Thumbnail of Video")
        div 
            div
                a(href="/users/"+video.owner._id) 
                    if video.owner.avatarUrl
                        if video.owner.avatarUrl.startsWith("http")
                            img(src=video.owner.avatarUrl, alt="Avatar of Video Owner")
                        else
                            img(src="/"+video.owner.avatarUrl, alt="Avatar of Video Owner")
                    else 
                        span ðŸ˜º
                    span=video.owner.name
            div 
                a(href="/videos/"+video._id) 
                    h4=video.title
                    span #{video.meta.views} #{video.meta.views <= 1 ? "view" : "views"}