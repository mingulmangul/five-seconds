            if user.avatarUrl.startsWith("http")
                img(src=user.avatarUrl, alt="Avatar", style="width:80px; height:80px; border-radious:50%;")
            else
                img(src="/"+user.avatarUrl, alt="Avatar", style="width:80px; height:80px; border-radious:50%;")
        else 
            p ðŸ˜º
