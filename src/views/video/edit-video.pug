extends ../base

block main 
    form.form(method="post", enctype="multipart/form-data") 
        label(for="thumbnailFile") Thumbnail Image
        input#thumbnailFile(type="file", name="thumbnailFile", accept="image/*")
        label(for="title") Title
        input#title(type="text", name="title", maxlength="100", value=video.title, required)
        label.form--optional(for="description") Description
        input.form--optional#description(type="text", name="description", maxlength="1000", value=video.description)
        label.form--optional(for="hashtags") Hashtags
        input.form--optional#hashtags(type="text", name="hashtags", placeholder="Hashtags are separated by comma.", value=video.hashtags.join())
        div 
            a.form__convert--link(href=`/videos/${video._id}/delete`) Delete Video
        button.form__button(type="submit") Save
